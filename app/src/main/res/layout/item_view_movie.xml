<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background"
    android:minHeight="96dp"
    android:padding="3dp"
    app:cardElevation="2dp"
>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:selectableItemBackground"
    android:orientation="horizontal"/>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
>

  <ImageView
      android:id="@+id/imageView"
      android:layout_height="90dp"
      android:layout_width="60dp"
      app:srcCompat="@drawable/ic_magnifying_glass_yellow"
      android:layout_centerVertical="true"
      android:layout_alignParentStart="true"
  />

  <TextView
      android:id="@+id/text_view_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginStart="40dp"
      android:layout_alignTop="@id/imageView"
      android:layout_toEndOf="@+id/imageView"
      android:textColor="@color/mainTitle"
  />

  <TextView
      android:id="@+id/text_view_year"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignStart="@id/text_view_title"
      android:layout_below="@id/text_view_title"
      android:textColor="@color/subTitle"
  />

  <TextView
      android:id="@+id/text_view_director"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignStart="@id/text_view_year"
      android:layout_below="@id/text_view_year"
      android:textColor="@color/subTitle"
  />
</RelativeLayout>
</android.support.v7.widget.CardView>